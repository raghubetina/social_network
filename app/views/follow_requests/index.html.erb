<div class="page-header">
  <h1>
    Follow requests
    <a href="/follow_requests/new" class="btn btn-lg btn-success">New Follow request</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Sender</th>
        <th>Recipient</th>
        <th>Actions</th>
      </tr>

      <% @follow_requests.each do |follow_request| %>
      <tr>
        <td><%= follow_request.sender.email %></td>
        <td><%= follow_request.recipient.email %></td>
        <td>
          <a href="/follow_requests/<%= follow_request.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == follow_request.sender %>
            <a href="/follow_requests/<%= follow_request.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_follow_request/<%= follow_request.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
